# BrozeAXE-AI Environment Variables

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Server Configuration
PORT=5001
HOST=0.0.0.0

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Path (Railway will use persistent volume)
DATABASE_PATH=/data/acs_artifacts.db

# File Upload Configuration
MAX_UPLOAD_SIZE=100000000
UPLOAD_FOLDER=/data/uploads

# Anthropic AI API Key (REQUIRED for AI analysis with Claude 4.5 Sonnet)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-api-key-here

# Google Drive Storage Configuration
# Set STORAGE_BACKEND to 'gdrive' to enable Google Drive storage
STORAGE_BACKEND=local

# Google Drive Credentials (Service Account JSON)
# For Railway: Set this as environment variable with the full JSON content
# For local: Set path to credentials file
GOOGLE_DRIVE_CREDENTIALS_PATH=/app/credentials.json

# Optional: Specify Google Drive folder ID to store files
# If not set, files will be stored in root of Drive
# GOOGLE_DRIVE_FOLDER_ID=your-folder-id-here

# Database Backup Configuration
# Automatically backup database to Google Drive (when using gdrive backend)
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL_HOURS=24
