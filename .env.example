# BrozeAXE-AI Environment Configuration
# ======================================
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database
ACS_DB_PATH=acs_artifacts.db

# File Upload
UPLOAD_FOLDER=/tmp/acs_uploads
MAX_CONTENT_LENGTH=524288000  # 500MB in bytes

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Authentication
JWT_EXPIRATION_HOURS=24

# Anthropic AI (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Taxonomy
TAXONOMY_DB=/tmp/acs_taxonomy.json

# Celery (for async tasks - future implementation)
# CELERY_BROKER=redis://localhost:6379/0
# CELERY_BACKEND=redis://localhost:6379/0
